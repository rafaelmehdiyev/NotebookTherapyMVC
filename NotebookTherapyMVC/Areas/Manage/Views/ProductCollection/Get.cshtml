@{
    ViewData["Title"] = "Get";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}


@model IDataResult<ProductCollectionGetDto>

<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header card-header-border-bottom">
                <h2>Product Collection Detail</h2>
            </div>
            <div class="card-body">
                <form class="row ec-vendor-uploads">
                    <div class="col-lg-12">
                        <div class="ec-vendor-upload-detail">
                            <div class="row g-3">
                                <div class="col-md-12 text-center">
                                    <h4 class="py-2 text-dark">@Model.Data.Name</h4>
                                    <div class="col-md-12 ml-2 ">
                                        @if (@Model.Data.isDeleted)
                                        {
                                            <span class="badge badge-danger">Inactive</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                    </div>
                                </div>
                                <div class="row mt-3 justify-content-center">
                                    @if (!@Model.Data.isDeleted)
                                    {
                                        <div class="col-xl-6 d-flex justify-content-center">
                                            <div class="media widget-media p-3 mx-2 bg-white border">
                                                <div class="icon d-flex justify-content-center rounded-circle bg-primary" style="padding:inherit;">
                                                    <i class="fas fa-edit text-white fontIcon "></i>
                                                </div>
                                                <div class="media-body align-self-center">
                                                    <a asp-action="Update" asp-controller="ProductCollection" asp-route-id="@Model.Data.Id" class="dropdown-item">Edit</a>
                                                </div>
                                            </div>
                                            <div class="media widget-media p-3 mx-2 bg-white border">
                                                <div class="icon d-flex justify-content-center  rounded-circle bg-warning mr-3" style="padding:inherit;">
                                                    <i class="fas fa-trash text-white "></i>
                                                </div>
                                                <div class="media-body align-self-center">
                                                    <a asp-action="Delete" asp-controller="ProductCollection" asp-route-id="@Model.Data.Id" class="dropdown-item">Delete</a>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-xl-4 d-flex">
                                            <div class="media widget-media p-3 bg-white border">
                                                <div class="icon d-flex justify-content-center rounded-circle bg-primary" style="padding:inherit;">
                                                    <i class="fas fa-trash-restore-alt text-white fontIcon "></i>
                                                </div>
                                                <div class="media-body align-self-center">
                                                    <a asp-action="Recover" asp-controller="ProductCollection" asp-route-id="@Model.Data.Id" class="dropdown-item">Recover</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-4 d-flex">
                                            <div class="media widget-media p-3 bg-white border">
                                                <div class="icon d-flex justify-content-center rounded-circle  bg-warning mr-3" style="padding:inherit;">
                                                    <i class="fas fa-trash text-white "></i>
                                                </div>
                                                <div class="media-body align-self-center">
                                                    <a asp-action="HardDelete" asp-controller="ProductCollection" asp-route-id="@Model.Data.Id" class="dropdown-item">Permamently Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-5">
    <div class="col-12 p-b-15 ">

        <div class="card card-table-border-none card-default recent-orders shadow" id="recent-orders">

            <div class="card-header justify-content-between">
                <h2>ProductCollection's Products</h2>
            </div>
            <div class="row content-justify-center">
                <div class="col-lg-12 col-xl-12">
                    <div class="profile-content-right profile-right-spacing py-5">
                        <div class="tab-content px-3 px-xl-5" id="myTabContent">
                            <div class="tab-pane fade show active" id="profile" role="tabpanel"
                                 aria-labelledby="profile-tab">
                                <div class="tab-widget mt-5">
                                    <div class="row">
                                        <div class="col-xl-12">
                                            <div class="table-responsive">
                                                <partial name="_productTablePartial" model="Model.Data.Products" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





