@{
    ViewData["Title"] = "Index";

}
@model IDataResult<List<BundleGetDto>>
<div class="breadcrumb-wrapper breadcrumb-wrapper-2 breadcrumb-contacts">
	<h1>Bundles</h1>
	<p class="breadcrumbs">
		<span><a href="index.html">Home</a></span>
		<span><i class="mdi mdi-chevron-right"></i></span>Bundle
	</p>
</div>
<div class="row">
	<div class="col-xl-4 col-lg-12">
		<div class="ec-cat-list card card-default mb-24px">
			<div class="card-body">
				<div class="ec-cat-form">
					<h4>Add New Bundle</h4>
					<partial name="_bundleCreatePartial" model="new BundlePostDto()" />
				</div>
			</div>
		</div>
	</div>
	<div class="col-xl-8 col-lg-12">
		<div class="ec-cat-list card card-default">
			<div class="card-body">
				<div class="table-responsive">
					<table id="responsive-data-table" class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Status</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (BundleGetDto bundle in Model.Data)
							{
								<tr>
									<td>@bundle.Id</td>
									<td>@bundle.Name</td>
									<td>
										@{
											if (bundle.isDeleted)
											{
												@:<span class="badge badge-danger">Inactive</span>
											}
											else
											{
												@:<span class="badge badge-success">Active</span>
											}
										}
									</td>
									<td>
										<div class="btn-group">
											<button asp-action="Get" asp-controller="Bundle" asp-route-id="@bundle.Id" type="button" class="btn btn-outline-success">Info</button>
											@{
												<button type="button" class="btn btn-outline-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
													<span class="sr-only">Info</span>
												</button>
												if (!bundle.isDeleted)
												{												
													<div class="dropdown-menu">
														<a asp-action="Update" asp-controller="Bundle" asp-route-id="@bundle.Id" class="dropdown-item">Edit</a>
														<a asp-action="Delete" asp-controller="Bundle" asp-route-id="@bundle.Id" class="dropdown-item">Delete</a>
													</div>
												}
												else
												{
													<div class="dropdown-menu">
														<a asp-action="Recover" asp-controller="Bundle" asp-route-id="@bundle.Id" class="dropdown-item">Recover</a>
														<a asp-action="HardDelete" asp-controller="Bundle" asp-route-id="@bundle.Id" class="dropdown-item">Permamently Delete</a>
													</div>
												}
											}
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

