@{
    ViewData["Title"] = "FAQCategory";
}
@model IDataResult<List<FAQCategoryGetDto>>
<div class="breadcrumb-wrapper breadcrumb-wrapper-2 breadcrumb-contacts">
    <h1>Main FAQCategory</h1>
    <p class="breadcrumbs">
        <span><a href="index.html">Home</a></span>
        <span><i class="mdi mdi-chevron-right"></i></span>Main FAQCategory
    </p>
</div>
<div class="row">
    <div class="col-xl-4 col-lg-12">
        <div class="ec-cat-list card card-default mb-24px">
            <div class="card-body">
                <div class="ec-cat-form">
                    <h4>Add New FAQCategory</h4>
                    <partial name="_faqCategoryCreatePartial" model="new FAQCategoryPostDto()" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-8 col-lg-12">
        <div class="ec-cat-list card card-default">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="responsive-data-table" class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Question Count</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (FAQCategoryGetDto faqCategory in Model.Data)
                            {
                                <tr>
                                    <td>@faqCategory.Id</td>
                                    <td>@faqCategory.Name</td>
                                    <td>@faqCategory.FAQs.Count</td>
                                    <td>
                                        @{
                                            if (faqCategory.isDeleted)
                                            {
                                                @:<span class="badge badge-danger">Inactive</span>
                                            }
                                            else
                                            {
                                                @:<span class="badge badge-success">Active</span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button asp-action="Get" asp-controller="FAQCategory" asp-route-id="@faqCategory.Id" type="button" class="btn btn-outline-success">Info</button>
                                            @{
                                                <button type="button" class="btn btn-outline-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                                                    <span class="sr-only">Info</span>
                                                </button>
                                                if (!faqCategory.isDeleted)
                                                {
                                                    <div class="dropdown-menu">
                                                        <a asp-action="Update" asp-controller="FAQCategory" asp-route-id="@faqCategory.Id" class="dropdown-item">Edit</a>
                                                        <a asp-action="Delete" asp-controller="FAQCategory" asp-route-id="@faqCategory.Id" class="dropdown-item">Delete</a>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="dropdown-menu">
                                                        <a asp-action="Recover" asp-controller="FAQCategory" asp-route-id="@faqCategory.Id" class="dropdown-item">Recover</a>
                                                        <a asp-action="HardDelete" asp-controller="FAQCategory" asp-route-id="@faqCategory.Id" class="dropdown-item">Permamently Delete</a>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

