@{
    ViewData["Title"] = "Color";
}
@model ColorPostDto
<div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
    <div>
        <h1>Add Color</h1>
        <p class="breadcrumbs">
            <span><a href="index.html">Home</a></span>
            <span><i class="mdi mdi-chevron-right"></i></span>Colors
        </p>
    </div>
    <div>
        <a asp-action="Index" asp-controller="Color" class="btn btn-primary">
            Return to all Colors
        </a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header card-header-border-bottom">
                <h2>Add Color</h2>
            </div>
            <div class="card-body">
                <div class="row ec-vendor-uploads">
                    <div class="col-lg-12">
                        <div class="ec-vendor-upload-detail">
                            <form asp-action="Create" asp-controller="Color" asp-area="Manage">
                                <div class="form-group row">
                                    <label asp-for="Name" class="col-12 col-form-label">Color</label>
                                    <div class="col-12">
                                        <span class="mt-2 text text-danger" asp-validation-for="@Model.Name"></span>
                                        <input asp-for="Name" class="form-control here slug-title" type="text">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <button name="submit" type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
