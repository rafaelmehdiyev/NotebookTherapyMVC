@{
    ViewData["Title"] = "Index";
}
@model IDataResult<List<ReviewGetDto>>

<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper breadcrumb-wrapper-2 d-flex align-items-center justify-content-between">
            <h1>Review</h1>
            <p class="breadcrumbs">
                <span><a href="index.html">Home</a></span>
                <span><i class="mdi mdi-chevron-right"></i></span>Reviews
            </p>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="table-responsive">
                            <partial name="_ratingTablePartial" model="Model.Data" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-contact" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content px-4">
            <div class="modal-header border-bottom-0">
                <h5>Review Details</h5>
                <button type="button" class="btn-close-icon justify-content-end" data-bs-dismiss="modal" aria-label="Close">
                    <i class="mdi mdi-close"></i>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(".table").on("click", "#infoBtn", function () {
            var id = $(this).data('id');
            $.ajax({
                url: "@Url.Action("Get", "Review")",
                data: { id: id },
                success: function (data) {
                    $("#modal-contact .modal-dialog .modal-body").html(data);
                }
            });
        });
    </script>
}