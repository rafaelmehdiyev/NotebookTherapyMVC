@{
    ViewData["Title"] = "Products";
}
@model IDataResult<List<ProductGetDto>>
<div class="breadcrumb-wrapper breadcrumb-wrapper-2 breadcrumb-contacts">
    <h1>Products</h1>
    <p class="breadcrumbs">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Product">New Product</a>
    </p>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="ec-cat-list card card-default">
            <div class="card-body">
                <div class="table-responsive">
                    <partial name="_productTablePartial" model="Model.Data"/>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-contact" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content px-4">
            <div class="modal-header border-bottom-0">
                <h5>Product's Detail</h5>
                <button type="button" class="btn-close-icon justify-content-end" data-bs-dismiss="modal" aria-label="Close">
                    <i class="mdi mdi-close"></i>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(".table").on("click", "#infoBtn", function () {
            var id = $(this).data('id');
            $.ajax({
                url: "@Url.Action("Get", "Product")",
                data: { id: id },
                success: function (data) {
                    $("#modal-contact .modal-dialog .modal-body").html(data);
                }
            });
        });
    </script>
}