@model List<RoleGetDto>
<table id="responsive-data-table" class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>User Count</th>
            <th>Action</th>
            <th>View</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Users.Count</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Update" asp-controller="Role" asp-route-id="@Model[i].Id" class="btn btn-outline-warning py-2 px-3">Edit</a>
                        <a asp-action="Delete" asp-controller="Role" asp-route-id="@Model[i].Id" class="btn btn-outline-danger py-2 px-3">Delete</a>
                    </div>
                </td>
                <td>
                    <a href="javascript:0" data-bs-toggle="modal" data-bs-target="#modal-contact" class="view-detail" id="infoBtn" data-id="@Model[i].Id">
                        <i class="mdi mdi-eye-plus-outline"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
