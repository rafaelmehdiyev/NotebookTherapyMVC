@model IDataResult<ProductCollectionGetDto>
@{
    ViewData["Title"] = Model.Data.Name;
}
@section BeforeMediaLinks{
    <link rel="stylesheet" href="~/assets/css/index.css">
    <link rel="stylesheet" href="~/assets/css/trending.css">
}
@section Scripts{
    <script src="~/assets/js/header.js"></script>
    <script src="~/assets/js/slider.js"></script>
}
<div class="containr">
    <section class="trending">
        <h1>@Model.Data.CollectionIcon @Model.Data.Name @Model.Data.CollectionIcon</h1>
        <span class="collection_description">@Model.Data.Description</span>
        <div class="row">
            @foreach (ProductGetDto product in Model.Data.Products)
            {
                <div class="col-6 col-md-4 col-lg-3 gy-4">
                    <div class="card-item text-center">
                        <a asp-action="Detail" asp-controller="Product" asp-route-id="@product.Id">
                            <img src="~/uploads/product/@(product.ProductImages.FirstOrDefault().ImagePath)"
                             alt="product" class="top">
                            <img src="~/uploads/product/@(product.ProductImages.Skip(1).Take(1).FirstOrDefault().ImagePath)" alt="" class="bottom">
                        </a>
                        <a href="#">
                            <span class="d-block mt-3 mb-2 product-name">
                                @product.Name
                            </span>
                        </a>
                        <a asp-action="Detail" asp-controller="Product" asp-route-id="@product.Id" class="d-block text-center button">
                            <span>Learn More</span>
                        </a>
                    </div>
                </div>
            }
        </div>
        <a asp-action="Index" asp-controller="Product" class="d-block text-center my-5 button">
            <span>See More</span>
        </a>
    </section>
